<UserControl x:Class="MaterialDesignSkin.Views.AppDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lex="clr-namespace:Localization.Extensions;assembly=DataInterfaces"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             Margin="128"
             VerticalAlignment="Top"
             d:DesignWidth="679.482"
             d:DesignHeight="302.221">
    <Border Background="{StaticResource MaterialDesignPaper}"
            BorderBrush="Black">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid VerticalAlignment="Top">
                    <Image VerticalAlignment="Stretch"
                           HorizontalAlignment="Stretch"
                           Stretch="Fill"
                           Height="320"
                           Source="{Binding ImageData.Result,Converter={StaticResource NullImageSourceConverter}}" />
                    <materialDesign:PackIcon Grid.RowSpan="1"
                                             Style="{StaticResource _NO_IMAGE_ICON_STYLE}" />
                    <ProgressBar Margin="8"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 IsIndeterminate="True"
                                 Visibility="{Binding ImageData.IsNotCompleted, Converter={StaticResource BooleanToVisibilityConverter}}"
                                 Style="{StaticResource MaterialDesignCircularProgressBar}" />
                </Grid>
                <Grid Grid.Column="1"
                      Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                               Text="{Binding Category.Name}"
                               Margin="4"
                               Style="{StaticResource MaterialDesignSubheadingTextBlock}" />
                    <TextBlock Grid.Row="1"
                               Margin="4"
                               Text="{Binding Title}"
                               Style="{StaticResource MaterialDesignTitleTextBlock}" />
                    <materialDesign:RatingBar Grid.Row="2"
                                              Value="{Binding UserRating,Mode=TwoWay}" />
                    <ScrollViewer Grid.Row="3"
                                  MaxHeight="450"
                                  VerticalScrollBarVisibility="Auto">
                        <TextBlock Margin="4"
                                   Style="{StaticResource MaterialDesignSubheadingTextBlock}"
                                   TextWrapping="WrapWithOverflow"
                                   TextTrimming="CharacterEllipsis"
                                   Text="{Binding Description}" />
                    </ScrollViewer>
                    <Grid Grid.Row="4"
                          Margin="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0"
                              Visibility="{Binding Publisher,Converter={StaticResource NullVisibilityConverter}}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{lex:LocText Key=APPLICATION_PUBLISHER,Suffix=:}"
                                       Opacity="0.5"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       TextTrimming="CharacterEllipsis"
                                       TextWrapping="NoWrap"
                                       Style="{StaticResource MaterialDesignBody2TextBlock}" />
                            <TextBlock Grid.Column="1"
                                       Text="{Binding Publisher.Name}"
                                       Margin="4"
                                       TextTrimming="CharacterEllipsis"
                                       TextWrapping="NoWrap"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Style="{StaticResource MaterialDesignBody2TextBlock}" />
                        </Grid>
                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{lex:LocText Key=APPLICATION_RELEASE_DATE,Suffix=:}"
                                       Opacity="0.5"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       TextTrimming="CharacterEllipsis"
                                       TextWrapping="NoWrap"
                                       Style="{StaticResource MaterialDesignBody2TextBlock}" />
                            <TextBlock Grid.Column="1"
                                       Text="{Binding ReleaseDate,StringFormat=d}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       TextTrimming="CharacterEllipsis"
                                       TextWrapping="NoWrap"
                                       Margin="4"
                                       Style="{StaticResource MaterialDesignBody2TextBlock}" />
                        </Grid>
                        <Grid Grid.Column="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{lex:LocText Key=APPLICATION_ADD_DATE,Suffix=:}"
                                       Opacity="0.5"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       TextTrimming="CharacterEllipsis"
                                       TextWrapping="NoWrap"
                                       Style="{StaticResource MaterialDesignBody2TextBlock}" />
                            <TextBlock Grid.Column="1"
                                       Text="{Binding AddDate,StringFormat=d}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       TextTrimming="CharacterEllipsis"
                                       TextWrapping="NoWrap"
                                       Margin="4"
                                       Style="{StaticResource MaterialDesignBody2TextBlock}" />
                        </Grid>
                        <Grid Grid.Column="3"
                              Visibility="{Binding Developer,Converter={StaticResource NullVisibilityConverter}}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{lex:LocText Key=APPLICATION_DEVELOPER,Suffix=:}"
                                       Opacity="0.5"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       TextTrimming="CharacterEllipsis"
                                       TextWrapping="NoWrap"
                                       Style="{StaticResource MaterialDesignBody2TextBlock}" />
                            <TextBlock Grid.Column="1"
                                       Text="{Binding Developer.Name}"
                                       Margin="4"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       TextTrimming="CharacterEllipsis"
                                       TextWrapping="NoWrap"
                                       Style="{StaticResource MaterialDesignBody2TextBlock}" />
                        </Grid>
                    </Grid>
                </Grid>
                <GridSplitter HorizontalAlignment="Center"
                              Grid.Column="2"
                              Width="1"
                              IsEnabled="False"
                              Opacity="0.5"
                              VerticalAlignment="Stretch"
                              Background="Black" />
                <Border Grid.Column="3">
                    <ItemsControl Margin="8"
                                  ClipToBounds="False"
                                  ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                  ItemTemplate="{StaticResource _APP_EXE_DETAIL_TEMPLATE}"
                                  ItemsSource="{Binding Executables}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel Orientation="Vertical" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </Border>
            </Grid>
            <Border Grid.Row="1"
                    BorderBrush="Black"
                    BorderThickness="0,0.5,0,0"
                    Background="{StaticResource MaterialDesignCardBackground}">
                <Grid Grid.Row="1">
                    <ItemsControl ItemsSource="{Binding AppLinks.MediaLinks}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Margin="2"
                                        Padding="4"
                                        Command="{Binding ExecuteCommand}"
                                        Width="200"
                                        Style="{StaticResource MaterialDesignFlatButton}"
                                        Height="150">
                                    <Grid>
                                        <Image VerticalAlignment="Stretch"
                                               HorizontalAlignment="Stretch"
                                               Stretch="Uniform"
                                               Height="280"
                                               Source="{Binding ImageData.Result,Converter={StaticResource NullImageSourceConverter}}" />
                                        <materialDesign:PackIcon Grid.RowSpan="1"
                                                                 Style="{StaticResource _NO_IMAGE_ICON_STYLE}" />
                                        <ProgressBar Margin="8"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                     IsIndeterminate="True"
                                                     Visibility="{Binding ImageData.IsNotCompleted, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                     Style="{StaticResource MaterialDesignCircularProgressBar}" />
                                        <Border VerticalAlignment="Bottom"
                                                HorizontalAlignment="Stretch">
                                            <Border.Background>
                                                <SolidColorBrush Opacity="0.5"
                                                                 Color="Black" />
                                            </Border.Background>
                                            <TextBlock Text="{Binding Caption}"
                                                       TextWrapping="NoWrap"
                                                       Margin="2"
                                                       TextTrimming="CharacterEllipsis" />
                                        </Border>
                                    </Grid>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
