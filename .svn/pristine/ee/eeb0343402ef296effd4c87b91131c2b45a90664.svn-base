<UserControl x:Class="MaterialDesignSkin.Views.LoginControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lex="clr-namespace:Localization.Extensions;assembly=DataInterfaces"
             xmlns:sif="clr-namespace:SkinInterfaces;assembly=DataInterfaces"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignWidth="622"
             d:DesignHeight="286">
    <md:Transitioner SelectedIndex="{Binding UserLoginViewModel.LoginProgressStateIndex,Mode=OneWay,FallbackValue=0}">
        <md:TransitionerSlide>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0"
                        Background="{StaticResource PrimaryHueDarkBrush}"
                        CornerRadius="8,0,0,8">
                    <Label VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           FontSize="128"
                           Margin="8"
                           Style="{StaticResource MaterialDesignLabel}"
                           Content="{Binding Client.Number,FallbackValue=?}" />
                </Border>
                <Border Grid.Column="1"
                        BorderBrush="Gray"
                        BorderThickness="0,0,1,0"
                        Width="2"
                        Background="Black" />
                <Border Grid.Column="2"
                        Background="{StaticResource PrimaryHueDarkBrush}"
                        CornerRadius="0,8,8,0">
                    <Grid Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <md:PackIcon Grid.Column="0"
                                     Width="64"
                                     Height="64"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Center"
                                     Kind="Account" />
                        <TextBox md:TextFieldAssist.DecorationVisibility="Visible"
                                 Text="{Binding UserLoginViewModel.Username,UpdateSourceTrigger=PropertyChanged}"
                                 Grid.Column="1"
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Stretch"
                                 md:HintAssist.IsFloating="True"
                                 md:HintAssist.Hint="{lex:LocTextUpper Key=USERNAME}"
                                 FontSize="18"
                                 Margin="8" />
                        <PasswordBox md:TextFieldAssist.DecorationVisibility="Visible"
                                     Grid.Column="2"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Stretch"
                                     md:HintAssist.IsFloating="True"
                                     FontSize="18"
                                     Margin="0,8,8,8"
                                     md:HintAssist.Hint="{lex:LocTextUpper Key=PASSWORD}"
                                     sif:PasswordBoxAssistant.BindPassword="True"
                                     sif:PasswordBoxAssistant.BoundPassword="{Binding Path=UserLoginViewModel.Password,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" />
                        <Button Width="72"
                                Height="72"
                                Background="{x:Null}"
                                BorderBrush="{x:Null}"
                                Grid.Column="4"
                                Padding="0"
                                IsDefault="True"
                                Command="{Binding UserLoginViewModel.LoginCommand}"
                                VerticalContentAlignment="Center"
                                HorizontalContentAlignment="Center">
                            <md:PackIcon Width="64"
                                         Height="64"
                                         Kind="LoginVariant" />
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </md:TransitionerSlide>
        <md:TransitionerSlide>
            <Border Background="{StaticResource PrimaryHueDarkBrush}"
                    CornerRadius="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <ProgressBar Grid.Column="0"
                                 Style="{StaticResource MaterialDesignCircularProgressBar}"
                                 Foreground="YellowGreen"
                                 Width="64"
                                 Height="64"
                                 Margin="8"
                                 IsIndeterminate="True" />
                    <TextBlock Grid.Column="1"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontSize="72"
                               Text="{lex:LocText Key=LOGGING_IN}" />
                </Grid>
            </Border>
        </md:TransitionerSlide>
        <md:TransitionerSlide>
            <Border Background="{StaticResource PrimaryHueDarkBrush}"
                    CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                               Margin="8"
                               FontSize="22"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Text="{lex:LocText Key=LOGIN_FAILED}" />
                    <TextBlock Grid.Row="1"
                               FontSize="17"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Text="{Binding UserLoginViewModel.FailMessage}" />
                </Grid>
            </Border>
        </md:TransitionerSlide>
        <md:TransitionerSlide>
            <Border Background="{StaticResource PrimaryHueDarkBrush}"
                    CornerRadius="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <ProgressBar Grid.Column="0"
                                 Style="{StaticResource MaterialDesignCircularProgressBar}"
                                 Foreground="YellowGreen"
                                 Width="64"
                                 Height="64"
                                 Margin="8"
                                 IsIndeterminate="True" />
                    <TextBlock Grid.Column="1"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontSize="72"
                               Text="{lex:LocText Key=LOGGING_OUT}" />
                </Grid>
            </Border>
        </md:TransitionerSlide>
    </md:Transitioner>
</UserControl>
