<UserControl x:Class="MaterialDesignSkin.Views.UserAgreementsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lex="clr-namespace:Localization.Extensions;assembly=DataInterfaces"
             xmlns:sif="clr-namespace:SkinInterfaces;assembly=DataInterfaces"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:MaterialDesignSkin.Views"
             FontSize="18"
             FontWeight="Medium"
             mc:Ignorable="d"
             d:DesignWidth="500"
             d:DesignHeight="700">
    <Border>
        <Border.Background>
            <SolidColorBrush Color="Black"
                             Opacity="0.8" />
        </Border.Background>
        <Grid VerticalAlignment="Center"
              HorizontalAlignment="Center"
              Width="500"
              Height="700">
            <Border Grid.Column="0"
                    Background="{StaticResource MaterialDesignDarkBackground}"
                    CornerRadius="8">
                <local:RegsiterAgreementView DataContext="{Binding UserAgreementsViewModel}" Margin="8" />
            </Border>
        </Grid>
    </Border>
</UserControl>
